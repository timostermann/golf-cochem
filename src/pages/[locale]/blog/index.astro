---
import type { GetStaticPaths } from "astro";
import { fetchApi } from "@lib/strapi";
import type { Blogpost } from "@lib/api-types";
import Layout from "@layouts/Layout.astro";
import { LOCALES } from "@lib/constants";
import { Button, ButtonVariant } from "@components/Button";

export const getStaticPaths = (async () => {
  const blogposts = (
    await Promise.all(
      LOCALES.map((locale) =>
        fetchApi<Blogpost[]>({
          endpoint: "blogposts",
          query: {
            locale,
          },
        }),
      ),
    )
  ).flat();

  return blogposts.map((blogpost) => ({
    params: {
      locale: blogpost.attributes.locale,
    },
  }));
}) satisfies GetStaticPaths;

const { locale } = Astro.params;

const blogposts = await fetchApi<Blogpost[]>({
  endpoint: "blogposts",
  query: {
    locale,
  },
});
---

<Layout title="News & Blog">
  {
    blogposts.map((blogpost, i) => (
      <div class="mb-12 flex flex-col gap-4">
        <div>
          <h2>{blogpost.attributes.title}</h2>
          <p>{blogpost.attributes.teaser}</p>
        </div>
        <Button
          variant={
            i % 2 === 0 ? ButtonVariant.PRIMARY : ButtonVariant.SECONDARY
          }
          href={`/${locale}/blog/${blogpost.attributes.slug}`}
        >
          Learn more
        </Button>
      </div>
    ))
  }
</Layout>
